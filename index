                        <path d="M14.82 2.41c3.96 0 7.18 3.24 7.18 7.21 0 3.96-3.22 7.18-7.18 7.18-3.97 0-7.21-3.22-7.21-7.18 0-3.97 3.24-7.21 7.21-7.21M2 21.6h3.5V2.41H2V21.6z" />
                    </svg>
                </a>
            </div>
        </section>
        
        
        </div>
    </div>

    


<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnUSD = document.getElementById('usdToggle');
    const btnMXN = document.getElementById('mxnToggle');
    const btnIll = document.getElementById('illustrationToggle');
    const btnCom = document.getElementById('comicToggle');
    const secIll = document.getElementById('illustrationSection');
    const secCom = document.getElementById('comicSection');
    const conversionRate = 20; // 1 USD = 20 MXN
    let currentCurrency = 'USD';

    // What's included toggles
    const illustrationIncludesDiv = document.getElementById('illustrationIncludes');
    const comicIncludesDiv = document.getElementById('comicIncludes');

    function updatePrices() {
        document.querySelectorAll('.price-tag').forEach(tag => {
            const usd = parseFloat(tag.dataset.usd);
            const val = currentCurrency === 'MXN' ? usd * conversionRate : usd;
            const label = currentCurrency === 'MXN' ? 'MXN' : 'USD';
            
            let suffix = '';
            if (tag.textContent.includes('c/u')) suffix = ' c/u';
            else if (tag.textContent.includes('% desc.')) {
                const discountMatch = tag.textContent.match(/\((\d+% desc\.)\)/);
                if (discountMatch) suffix = ` (${discountMatch[1]})`;
            }

            tag.textContent = `$${val.toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 2 })} ${label}${suffix}`;
        });
    }

    function updateOrderSummary() {
        const isIll = !secIll.classList.contains('hidden');
        const serviceType = isIll ? 'illustration' : 'comic';
        
        let totalUsd = 0;
        const summaryExtrasList = []; 

        // 1. Precio del Servicio Base
        const selectedServiceInput = document.querySelector(`input[name="${serviceType}Type"]:checked`);
        const serviceRadioContainer = selectedServiceInput.closest('div.flex.justify-between.items-center');
        const serviceName = serviceRadioContainer.querySelector('label span').textContent.trim();
        const servicePriceTag = serviceRadioContainer.querySelector('.price-tag');
        const servicePriceUsd = parseFloat(servicePriceTag.dataset.usd);
        totalUsd += servicePriceUsd;

        const serviceDisplayPrice = currentCurrency === 'MXN' ? servicePriceUsd * conversionRate : servicePriceUsd;
        let serviceDisplayText = `${isIll ? 'Ilustración' : 'Cómic'} - ${serviceName}: $${serviceDisplayPrice.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency}`;
        if (servicePriceTag.querySelector('span.text-green-600')) { // Check for discount text
            serviceDisplayText += ` ${servicePriceTag.querySelector('span.text-green-600').outerHTML}`;
        }
        document.getElementById('selectedService').innerHTML = serviceDisplayText;


        // 2. Extras de Checkbox
        document.querySelectorAll(`input[name="${serviceType}Extras"]:checked`).forEach(el => {
            const extraLabel = el.nextElementSibling;
            if (extraLabel) { // Ensure extraLabel exists
                const extraName = extraLabel.textContent.trim();
                const extraPriceTag = el.closest('.flex.justify-between.items-center').querySelector('.price-tag');
                if (extraPriceTag && extraPriceTag.dataset.usd) { // Ensure price tag and data-usd exist
                    const extraPriceUsd = parseFloat(extraPriceTag.dataset.usd);
                    totalUsd += extraPriceUsd;
                    
                    const extraDisplayPrice = currentCurrency === 'MXN' ? extraPriceUsd * conversionRate : extraPriceUsd;
                    summaryExtrasList.push(`${extraName}: $${extraDisplayPrice.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency}`);
                }
            }
        });

        // 3. Extras Numéricos (Personajes adicionales, Diseño de personaje)
        if (isIll) {
            const numCharsInput = document.querySelector('.extra-chars');
            const numChars = parseInt(numCharsInput.value) || 0;
            if (numChars > 0) {
                const pricePerCharTag = numCharsInput.closest('.flex.justify-between.items-center').querySelector('.price-tag');
                if (pricePerCharTag && pricePerCharTag.dataset.usd) {
                    const pricePerCharUsd = parseFloat(pricePerCharTag.dataset.usd); 
                    const totalExtraCharsPriceUsd = numChars * pricePerCharUsd;
                    totalUsd += totalExtraCharsPriceUsd;

                    const displayPricePerChar = currentCurrency === 'MXN' ? pricePerCharUsd * conversionRate : pricePerCharUsd;
                    const displayTotalExtraCharsPrice = currentCurrency === 'MXN' ? totalExtraCharsPriceUsd * conversionRate : totalExtraCharsPriceUsd;
                    summaryExtrasList.push(`Personaje adicional (${numChars} x $${displayPricePerChar.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency} c/u): $${displayTotalExtraCharsPrice.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency}`);
                }
            }
        } else { // Comic
            // Personajes adicionales para cómic
            const numComicCharsInput = document.querySelector('.extra-comic-chars');
            const numComicChars = parseInt(numComicCharsInput.value) || 0;
            if (numComicChars > 0) {
                const pricePerComicCharTag = numComicCharsInput.closest('.flex.justify-between.items-center').querySelector('.price-tag');
                 if (pricePerComicCharTag && pricePerComicCharTag.dataset.usd) {
                    const pricePerComicCharUsd = parseFloat(pricePerComicCharTag.dataset.usd);
                    const totalExtraComicCharsPriceUsd = numComicChars * pricePerComicCharUsd;
                    totalUsd += totalExtraComicCharsPriceUsd;

                    const displayPricePerComicChar = currentCurrency === 'MXN' ? pricePerComicCharUsd * conversionRate : pricePerComicCharUsd;
                    const displayTotalExtraComicCharsPrice = currentCurrency === 'MXN' ? totalExtraComicCharsPriceUsd * conversionRate : totalExtraComicCharsPriceUsd;
                    summaryExtrasList.push(`Personaje adicional (${numComicChars} x $${displayPricePerComicChar.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency} c/u): $${displayTotalExtraComicCharsPrice.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency}`);
                }
            }

            // Diseño de personaje desde cero para cómic
            const numCharDesignInput = document.querySelector('.char-design');
            const numCharDesigns = parseInt(numCharDesignInput.value) || 0;
            if (numCharDesigns > 0) {
                const pricePerDesignTag = numCharDesignInput.closest('.flex.justify-between.items-center').querySelector('.price-tag');
                if (pricePerDesignTag && pricePerDesignTag.dataset.usd) {
                    const pricePerDesignUsd = parseFloat(pricePerDesignTag.dataset.usd);
                    const totalCharDesignPriceUsd = numCharDesigns * pricePerDesignUsd;
                    totalUsd += totalCharDesignPriceUsd;
                    
                    const displayPricePerDesign = currentCurrency === 'MXN' ? pricePerDesignUsd * conversionRate : pricePerDesignUsd;
                    const displayTotalCharDesignPrice = currentCurrency === 'MXN' ? totalCharDesignPriceUsd * conversionRate : totalCharDesignPriceUsd;
                    summaryExtrasList.push(`Diseño de personaje (${numCharDesigns} x $${displayPricePerDesign.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency} c/u): $${displayTotalCharDesignPrice.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency}`);
                }
            }
        }

        document.getElementById('selectedExtras').innerHTML = summaryExtrasList.length ? summaryExtrasList.map(e => `<li>${e}</li>`).join('') : '<li class="text-gray-500">Ningún extra seleccionado</li>';
        
        const prefs = {};
        const classificationInput = document.querySelector(`input[name="${isIll ? 'classification' : 'comic-classification'}"]:checked`);
        if (classificationInput && classificationInput.nextElementSibling) prefs['Clasificación'] = classificationInput.nextElementSibling.textContent.trim();

        const styleInput = document.querySelector(`input[name="${isIll ? 'style' : 'comic-style'}"]:checked`);
        if (styleInput && styleInput.nextElementSibling) prefs['Estilo'] = styleInput.nextElementSibling.textContent.trim();

        const characterTypeInput = document.querySelector(`input[name="${isIll ? 'characterType' : 'comic-characterType'}"]:checked`);
        if (characterTypeInput && characterTypeInput.nextElementSibling) prefs['Tipo de personaje'] = characterTypeInput.nextElementSibling.textContent.trim();
        
        const storyPremiseTextarea = document.querySelector(`textarea[name="${isIll ? 'storyPremise' : 'comic-storyPremise'}"]`);
        if (storyPremiseTextarea) prefs['Premisa de la historia'] = storyPremiseTextarea.value.trim() || '-';

        if (isIll) {
            const physicalDescInput = document.querySelector('input[name="physicalDescription"]');
            if (physicalDescInput) prefs['Descripción física'] = physicalDescInput.value.trim() || '-';
            
            const actionInput = document.querySelector('input[name="action"]');
            if (actionInput) prefs['Acción en la ilustración'] = actionInput.value.trim() || '-';
            
            const facialExpInput = document.querySelector('input[name="facialExpression"]');
            if (facialExpInput) prefs['Expresión facial'] = facialExpInput.value.trim() || '-';
            
            const refLinksInput = document.querySelector('input[name="referenceLinks"]');
            if (refLinksInput) prefs['Enlace referencias'] = refLinksInput.value.trim() || '-';
        } else {
            const narrativeGenreSelect = document.querySelector('select[name="narrativeGenre"]');
            if (narrativeGenreSelect && narrativeGenreSelect.selectedOptions[0]) prefs['Género narrativo'] = narrativeGenreSelect.selectedOptions[0].text;

            const visualStyleSelect = document.querySelector('select[name="visualStyle"]');
            if (visualStyleSelect && visualStyleSelect.selectedOptions[0]) prefs['Estilo narrativo'] = visualStyleSelect.selectedOptions[0].text;

            const readingFormatSelect = document.querySelector('select[name="readingFormat"]');
            if (readingFormatSelect && readingFormatSelect.selectedOptions[0]) prefs['Formato de lectura'] = readingFormatSelect.selectedOptions[0].text;

            const dialogAmountSelect = document.querySelector('select[name="dialogAmount"]');
            if (dialogAmountSelect && dialogAmountSelect.selectedOptions[0]) prefs['Cantidad de diálogos'] = dialogAmountSelect.selectedOptions[0].text;

            const comicRefLinksInput = document.querySelector('input[name="comic-referenceLinks"]');
            if (comicRefLinksInput) prefs['Enlace referencias'] = comicRefLinksInput.value.trim() || '-';
        }
        const prefUl = document.getElementById('selectedPreferences');
        prefUl.innerHTML = '';
        Object.entries(prefs).forEach(([k, v]) => {
            const li = document.createElement('li');
            li.textContent = `${k}: ${v}`;
            prefUl.appendChild(li);
        });

        const finalTotal = currentCurrency === 'MXN' ? totalUsd * conversionRate : totalUsd;
        document.getElementById('totalPrice').textContent = `$${finalTotal.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ${currentCurrency}`;
        document.getElementById('totalPrice').dataset.usd = totalUsd.toFixed(2); 
    }


    btnIll.addEventListener('click', () => {
        btnIll.classList.add('active');
        btnCom.classList.remove('active');
        secIll.classList.remove('hidden');
        secCom.classList.add('hidden');
        illustrationIncludesDiv.classList.remove('hidden');
        comicIncludesDiv.classList.add('hidden');
        updateOrderSummary();
    });
    btnCom.addEventListener('click', () => {
        btnCom.classList.add('active');
        btnIll.classList.remove('active');
        secCom.classList.remove('hidden');
        secIll.classList.add('hidden');
        comicIncludesDiv.classList.remove('hidden');
        illustrationIncludesDiv.classList.add('hidden');
        updateOrderSummary();
    });
    btnUSD.addEventListener('click', () => {
        currentCurrency = 'USD';
        btnUSD.classList.add('active');
        btnMXN.classList.remove('active');
        updatePrices();
        updateOrderSummary();
    });
    btnMXN.addEventListener('click', () => {
        currentCurrency = 'MXN';
        btnMXN.classList.add('active');
        btnUSD.classList.remove('active');
        updatePrices();
        updateOrderSummary();
    });

    document.querySelectorAll('input, select, textarea').forEach(el => {
        el.addEventListener('change', updateOrderSummary);
        el.addEventListener('input', updateOrderSummary); // For textareas and text inputs for real-time update
    });
    
    // Extra characters buttons
    document.querySelector('.decrease-chars').addEventListener('click', () => {
        const input = document.querySelector('.extra-chars');
        let val = parseInt(input.value) || 0;
        if (val > parseInt(input.min)) input.value = val - 1;
        updateOrderSummary();
    });
    document.querySelector('.increase-chars').addEventListener('click', () => {
        const input = document.querySelector('.extra-chars');
        let val = parseInt(input.value) || 0;
        if (val < parseInt(input.max)) input.value = val + 1;
        updateOrderSummary();
    });
    // Comic extra characters
    document.querySelector('.decrease-comic-chars').addEventListener('click', () => {
        const input = document.querySelector('.extra-comic-chars');
        let val = parseInt(input.value) || 0;
        if (val > parseInt(input.min)) input.value = val - 1;
        updateOrderSummary();
    });
    document.querySelector('.increase-comic-chars').addEventListener('click', () => {
        const input = document.querySelector('.extra-comic-chars');
        let val = parseInt(input.value) || 0;
        if (val < parseInt(input.max)) input.value = val + 1;
        updateOrderSummary();
    });
    // Character design extra
    document.querySelector('.decrease-char-design').addEventListener('click', () => {
        const input = document.querySelector('.char-design');
        let val = parseInt(input.value) || 0;
        if (val > parseInt(input.min)) input.value = val - 1;
        updateOrderSummary();
    });
    document.querySelector('.increase-char-design').addEventListener('click', () => {
        const input = document.querySelector('.char-design');
        let val = parseInt(input.value) || 0;
        if (val < parseInt(input.max)) input.value = val + 1;
        updateOrderSummary();
    });

// Redirect portfolio link
    document.getElementById('scrollToServices').addEventListener('click', function() {
        window.location.href = 'https://therichburm.my.canva.site/portafolio?fbclid=PAZXh0bgNhZW0CMTEAAadB6WskPslon95nT5ADjQPG3vQuSWYZYDc7hle0SvHrpzqCnLFdJbfG_ZJ04A_aem_0nSUErgLmEZhYTx1LBCBxQ';
    });

    // Copy summary button
    document.getElementById('copyButton').addEventListener('click', function() {
        let summaryText = `RESUMEN DEL PEDIDO\n\n`;
        summaryText += `Servicio seleccionado:\n${document.getElementById('selectedService').innerText.replace(/<span.*?<\/span>/g, '').trim()}\n\n`; // Remove HTML from service text

        summaryText += `Extras:\n`;
        const extrasList = document.getElementById('selectedExtras').querySelectorAll('li');
        if (extrasList.length === 1 && extrasList[0].classList.contains('text-gray-500')) {
            summaryText += `${extrasList[0].innerText}\n\n`;
        } else {
            extrasList.forEach(li => {
                summaryText += `- ${li.innerText}\n`;
            });
            summaryText += `\n`;
        }
        
        summaryText += `Preferencias:\n`;
        document.getElementById('selectedPreferences').querySelectorAll('li').forEach(li => {
            summaryText += `- ${li.innerText}\n`;
        });
        summaryText += `\n`;
        
        summaryText += `Total: ${document.getElementById('totalPrice').textContent}`;

        navigator.clipboard.writeText(summaryText).then(function() {
            alert('Resumen copiado al portapapeles!');
        }, function(err) {
            console.error('Error al copiar el resumen: ', err);
            alert('Error al copiar el resumen. Inténtalo de nuevo o copia manualmente.');
        });
    });


    updatePrices();
    updateOrderSummary();
});
</script>

</body>
</html>
